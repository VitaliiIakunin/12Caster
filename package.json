{
  "name": "12caster",
  "version": "1.0.0",
  "private": true,
  "main": "./client/src/main.tsx",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build:server": "NODE_ENV=production npx webpack --mode production",
    "build:client": "tsc -b && vite build",
    "build": "yarn run build:server && yarn run build:client",
    "dev:server": "npx ts-node-dev server/index.ts",
    "dev:client": "vite",
    "dev": "concurrently \"yarn run dev:server\" \"yarn run dev:client\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/ws": "^8.5.5",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "concurrently": "^8.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.5.14",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.0"
  }
}
